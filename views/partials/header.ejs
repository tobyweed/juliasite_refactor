    <!--on load scripts-->
    <script type="text/javascript">
        $(document).ready(function() {
            
                //Navbar active handling. Divide the url into segments based on slashes, check the fourth segment 
                //for what page we're on.
                var loc = window.location.href;
                var spl = loc.split("/");
                var str = spl[3];
                if(str) {
                    $("#"+str).addClass("active");
                } else {
                    $("#paintings").addClass("active");
                }
        });
        
        function dropNav() {
            $(".nav-item").slideToggle(100, "linear");
        }  
    </script>

</head>
